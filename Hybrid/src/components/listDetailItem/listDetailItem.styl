.listDetailItem {
    padding: 20px;
    min-height: 24px;
    border-bottom-width: 2px;
    border-bottom-style: solid;
    border-bottom-color: #ededed;
}

.listDetailItem-title {
    display: flex;
    font-size: 32px;
    color: #3e3e3e;
    font-weight: bold;
}

.listDetailItem-detail {
    display: flex;
    font-size: 28px;
    color: #8d8c92;
    line-height: 60px;
    display: flex;
}

.listDetailItem-button {
    font-size: 36px;
    background-color: #04be02;
    color: white;
    font-weight: bold;
    border: 0;
    text-align: center;
    margin-bottom: 15px;
    line-height: 80px;
    height: 80px;
}

.listDetailItem-a {
    font-size: 36px;
    text-align: center;
    display: flex;
    justify-content: center;
}