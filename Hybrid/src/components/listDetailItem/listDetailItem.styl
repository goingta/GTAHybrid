.listDetailItem {
    padding: 20px;
    min-height: 24px;
    border-bottom: 1px solid #ededed;
}

.listDetailItem-title {
    display: flex;
    font-size: 32px;
    color: #3e3e3e;
    font-weight: bold;
}

.listDetailItem-detail {
    display: flex;
    font-size: 28px;
    color: #8d8c92;
    line-height: 60px;
    display: flex;
    flex-dercation: row;
}

.listDetailItem-button {
    font-size: 36px;
    background-color: #04be02;
    color: white;
    border-radius: 10px;
    font-weight: bold;
    border: 0;
    outline: 0;
    -webkit-appearance: none;
    text-align: center;
    margin-bottom: 15px;
}

.listDetailItem-a {
    font-size: 36px;
    text-align: center;
    display: flex;
    justify-content: center;
}